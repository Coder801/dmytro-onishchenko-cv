#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Get current branch name
BRANCH=$(git branch --show-current)

# Check if we merged into master/main
if [ "$BRANCH" = "master" ] || [ "$BRANCH" = "main" ]; then
  echo "ðŸš€ Detected merge to $BRANCH - running standard-version..."

  # Run standard-version to bump version and generate changelog
  yarn run release

  echo "âœ… Version bumped and changelog updated!"
fi
